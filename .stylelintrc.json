{
  "extends": ["stylelint-config-standard", "stylelint-config-sass-guidelines"],
  "rules": {
    "max-nesting-depth": 3,
    "selector-class-pattern": null,
    "selector-no-qualifying-type": [
      true,
      { "ignore": ["attribute", "class", "id"] }
    ],
    "scss/at-import-no-partial-leading-underscore": null
  }
}
